{
  "manifest_version": 3,
  "name": "ComicForge AI - Professional AI Art Generator",
  "version": "1.0.0",
  "description": "Create stunning artwork with AI - Professional AI art generator for digital art and illustrations",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "pwa-192x192.png",
      "48": "pwa-192x192.png",
      "128": "pwa-512x512.png"
    }
  },
  "icons": {
    "16": "pwa-192x192.png",
    "48": "pwa-192x192.png",
    "128": "pwa-512x512.png"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*.huggingface.co/*",
    "https://*.razorpay.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}